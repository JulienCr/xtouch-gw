{
  "name": "xtouch-gw",
  "version": "0.1.0",
  "private": true,
  "description": "XTouch GW â€“ Gateway to control Voicemeeter, QLC+, OBS from Behringer X-Touch.",
  "license": "MPL-2.0",
  "engines": {
    "node": ">=24.1.0"
  },
  "packageManager": "pnpm@9.12.3",
  "type": "commonjs",
  "scripts": {
    "dev": "node --watch --import=tsx src/index.ts",
    "build": "tsc -p tsconfig.json && pnpm run build:copy-assets",
    "build:copy-assets": "node -e \"const fs=require('fs');const path=require('path');const src='src';const dist='dist';function copyDir(srcPath,distPath){if(!fs.existsSync(distPath))fs.mkdirSync(distPath,{recursive:true});const items=fs.readdirSync(srcPath);for(const item of items){const srcItem=path.join(srcPath,item);const distItem=path.join(distPath,item);const stat=fs.statSync(srcItem);if(stat.isDirectory()){copyDir(srcItem,distItem);}else if(item.endsWith('.yaml')||item.endsWith('.yml')){fs.copyFileSync(srcItem,distItem);console.log('Copied:',item);}}};copyDir(src,dist);\"",
    "start": "node dist/index.js",
    "check:types": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:unit": "vitest run -c vitest.config.ts",
    "test:integration": "vitest run --dir test/integration",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "clean": "rimraf dist",
    "sniff:web": "tsx src/sniffer-server.ts",
    "test:midi": "tsx src/test-midi-send.ts",
    "docs": "typedoc",
    "docs:html": "typedoc --options typedoc.html.json",
    "docs:md": "typedoc --options typedoc.md.json",
    "docs:clean": "rimraf docs/api docs/api-html",
    "docs:build": "pnpm run docs:clean && pnpm run docs:markdown && pnpm run docs:html",
    "docs:open": "pwsh -NoProfile -Command \"Start-Process docs/api/README.md\"",
    "docs:open:html": "pwsh -NoProfile -Command \"Start-Process docs/api-html/index.html\"",
    "web": "node scripts/check-next-build.mjs && pnpm -C web/config-editor start",
    "web:build": "pnpm -C web/config-editor build",
    "web:dev": "pnpm -C web/config-editor dev",
    "deadcode": "knip",
    "deadcode:strict": "knip --strict"
  },
  "dependencies": {
    "@julusian/midi": "^3.6.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "dotenv": "^17.2.1",
    "obs-websocket-js": "^5.0.6",
    "voicemeeter-connector": "^2.1.5",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.33.0",
    "fast-check": "^3.23.2",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.4",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9",
    "knip": "^5.34.3"
  }
}
